<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_back"
    tools:context=".Login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:fontFamily="cursive"
        android:layout_marginTop="35dp"
        android:id="@+id/login1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login:"
        android:layout_below="@id/login1"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="50dp"
        android:textSize="25dp"
        android:fontFamily="sans-serif-black"
        android:id="@+id/login2"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email ID: "
        android:layout_below="@id/login2"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:layout_alignStart="@id/login2"
        android:layout_alignLeft="@id/login2"
        android:padding="2dp"
        android:id="@+id/loginTV"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/loginTV"
        android:layout_marginLeft="120dp"
        android:layout_below="@id/login2"
        android:layout_marginRight="20dp"
        android:padding="2dp"
        android:layout_marginTop="30dp"
        android:id="@+id/loginet1"
        android:inputType="textEmailAddress"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:layout_below="@id/loginTV"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:layout_alignStart="@id/login2"
        android:layout_alignLeft="@id/login2"
        android:padding="2dp"
        android:id="@+id/loginTV1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/loginTV1"
        android:layout_marginLeft="130dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/loginet1"
        android:textColor="#25D366"
        android:padding="2dp"
        android:layout_marginTop="30dp"
        android:id="@+id/loginet2"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/register"
        android:text="Login"
        android:textColor="#0A0A09"
        android:textSize="25sp"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape"
        android:shadowColor="#7EA1A8"
        android:shadowRadius="5"
        android:fontFamily="serif-monospace"
        android:textAllCaps="false"
        android:layout_below="@id/loginet2"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have account? \nLogin Here"
        android:layout_below="@id/loginet2"
        android:layout_marginTop="45dp"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:textStyle="italic"
        android:id="@+id/goregister"
        />

</RelativeLayout>